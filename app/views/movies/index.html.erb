<div class="row">
  <div class="col-xs-12 col-md-4 mp-margin">
    <h1 class="text-align-left">Find Movies</h1>

    <div class="row">
      <form id="movie-search">
        <div class="col-xs-8">
          <input type="text" name="query" class="form-control" placeholder="Enter Movie Name">
        </div>
        <div class="col-xs-4">
          <button type="submit" class="btn btn-success">
            <span class="glyphicon glyphicon-search"></span> Search
          </button>
        </div>
      </form>
    </div>
    <hr>
    <h3>Latest Reviews</h3>
  </div>
  <div class="col-xs-12 col-md-8">
    <div id="movies">
    	<div class="text-center">
    		<div class="row">
			<% @movies.each do |movie| %>
			 	<div class="col-xs-12 col-sm-6 col-lg-4">
			    	<div class="thumbnail">
					<%= link_to movie_path(movie.id) do %>
						<img src="https://image.tmdb.org/t/p/w185<%= movie.poster %>" class="mp-margin" class="img-responsive" alt="<%= movie.title %>" title="<%= movie.title %>" style="width:100%; height: 325px; object-fit: cover;">
					<div class="caption">
				        <p><%= movie.title %></p>
				    </div>
					<% end %>
					</div>
				</div>
			<% end %>
			</div>
		</div>
    </div>
  </div>
</div>
