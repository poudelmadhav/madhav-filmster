<div class="row">
  <div class="col-xs-12 col-md-4 mp-margin">
    <h1 class="text-align-left">Find Movies</h1>

    <div class="row mp-margin">
      <form id="movie-search">
        <div class="col-xs-8">
          <input type="text" name="query" class="form-control" placeholder="Enter Movie Name">
        </div>
        <div class="col-xs-4">
          <button type="submit" class="btn btn-success">
            <span class="glyphicon glyphicon-search"></span> Search
          </button>
        </div>
      </form>
    </div>
    <% @movies.each do |movie| %>
      <h3><%= movie.title %></h3>
      <p><% movie.reviews.each do |review| %>
      	<%= review.comment %>
      	<br>
      	<% end%></p>
      <br>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-8">
    <div id="movies">
      <h2>Please use the search box to find the details of a movie!</h2>
    </div>
  </div>
</div>
<% @movies.each do |movie| %>
	<img src="https://image.tmdb.org/t/p/w342<%= movie.poster %>" class="mp-margin">
	<h1><b><%= movie.title %></b></h1>
	<br>
<% end %>