<% if current_user.following?(user) %>
	<%= link_to "Following", relationship_path(id: user.id), class: 'btn btn-success btn-lg', method: :delete, remote: true %>
<% else %>
	<%= link_to "Follow", relationships_path(id: user.id), class: 'btn btn-warning btn-lg', method: :post, remote: true %>
<% end %>
