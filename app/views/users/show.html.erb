<%= image_tag @user.avatar, class: 'prof-pic-lg' %><h1 class="text-center">

<%= @user.username %></h1>

<p class="text-center lead"><%= @user.introduction %></p>

<ul class="user-stats">
  <li>
    <div class="number-label">Reviews</div>
    <div class="number-value"><%= @user.reviews.count %></div>
  </li>
</ul>
<div id="reviewed-movies" class="row text-center">
</div>

<script type="text/javascript">
	$.ajax({
      url: '/users/<%= @user.id %>.json'
    })
    .done(function(data){
    	let htmlString = "";

	    data["reviews"].forEach(function(review){
	      htmlString += `<div class="col-xs-12 col-sm-4 col-md-3">
      						<div class="thumbnail">
      							<a href="/movies/${review["movie"]["id"]}"><img src="https://image.tmdb.org/t/p/w185${review["movie"]["poster"]}" class="movie_poster" style="width:100%; height: 325px; object-fit: cover;></a>
	      						<div class="caption">
	      							<p>${review["movie"]["title"]}
	      						</div>
	      					</div>
	      				</div>`;
	    });

	    $("#reviewed-movies").append(htmlString);
    });
</script>